<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parse.mvcdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.parse.mvcdemo.ParseDemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActionBar.Solid.Liveupdates">
        <activity
            android:name="com.parse.mvcdemo.LoginActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.parse.mvcdemo.RegistrationActivity"
            android:label="@string/title_activity_registration"></activity>
        <activity
            android:name="com.parse.mvcdemo.UpdateActivity"
            android:label="@string/title_activity_update"></activity>
        <activity
            android:name="com.parse.mvcdemo.HomeActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
